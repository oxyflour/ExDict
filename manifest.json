{
	"manifest_version": 2,

	"name": "Extention Dictionary",
	"description": "An Easy Dictionary Powerded by Google Translate",
	"version": "1.0",

	"permissions": [
		"tabs",
		"contextMenus",
		"notifications",
		"clipboardRead",
		"clipboardWrite",
		"<all_urls>"
	],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"background": {
		"scripts": ["bk.js"]
	},
/*
	"content_scripts": [
		{"matches": ["<all_urls>"], "js": ["cs.js"]}
	],
	"omnibox": {
		"keyword" : "def"
	},
*/
	"browser_action": {
		"default_icon": "icon32.png",
		"default_popup": "pp.html"
	},
	"icons": {
		"128": "icon128.png",
		"32": "icon32.png",
		"48": "icon48.png"
	}
}
